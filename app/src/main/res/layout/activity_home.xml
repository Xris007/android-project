<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background_home"
            app:layout_constraintTop_toTopOf="@+id/toolBar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="25dp"/>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"/>
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="150dp" android:background="@drawable/ic_disc"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_schedule"
            android:id="@+id/iBtnSchedule"
            app:layout_constraintEnd_toEndOf="@+id/imageView1" app:layout_constraintStart_toStartOf="@+id/imageView1"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView1"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_class"
            android:id="@+id/iBtnClass"
            app:layout_constraintStart_toStartOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="@+id/imageView6"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_contact"
            android:id="@+id/iBtnContact"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView5"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_notification"
            android:id="@+id/iBtnNotification"
            app:layout_constraintStart_toStartOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView3"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_teacher"
            android:id="@+id/iBtnTeacher"
            app:layout_constraintStart_toStartOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView4"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:background="@drawable/ic_package"
            android:id="@+id/iBtnPackage"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/imageView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/class_title"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="@+id/imageView6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/iBtnClass"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnter"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/schedule"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView1" app:layout_constraintEnd_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@+id/iBtnSchedule" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/teacher"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/iBtnTeacher" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/package_title"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/iBtnPackage" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/notification_title"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/iBtnNotification" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/contant_us_title"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/iBtnContact" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>