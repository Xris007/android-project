<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInActivity">
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/ic_header_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_logo"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"/>"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#b0b0b0"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Username"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"/>
    <ImageView
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/etUsername" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:id="@+id/etUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textSize="24sp"
            android:textColor="#1d1d26"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/avenir_book"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#b0b0b0"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/avenir_book"
            android:text="Password"
            android:id="@+id/textView1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="15dp"/>
    <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="24sp"
            android:textColor="#1d1d26"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"/>
    <ImageView
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" android:layout_marginTop="10dp"/>
    <Button
            android:id="@+id/btnLogIn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="0sp"
            android:text="LOG IN"
            android:background="#4AAB35"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#b0b0b0"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="0sp"
            android:text="FORGOT PASSWORD?"
            android:fontFamily="@font/avenir_book"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogIn" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>

