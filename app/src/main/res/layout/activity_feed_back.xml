<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FeedBackActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"/>
        <TextView
                android:id="@+id/toolBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextTitle"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                android:text="@string/toolbar_feedback"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toTopOf="@+id/toolBar" android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="@id/ivBack" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/ic_header_image1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/woym"
            android:fontFamily="@font/avenir_light"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/etTitle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/border"
            android:fontFamily="@font/avenir_book"
            android:ems="10"
            android:gravity="start"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Title:" android:textSize="18sp" android:padding="10dp"/>

    <EditText
            android:id="@+id/etDescription"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:ems="10"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:letterSpacing="0.02"
            android:background="@drawable/border"
            android:fontFamily="@font/avenir_book"
            android:gravity="start"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            android:hint="Description:" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etTitle" android:padding="10dp"/>
    <Button
            android:id="@+id/btnSend"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="0sp"
            android:text="@string/send"
            android:background="#4AAB35"
            android:fontFamily="@font/avenir_book"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/etDescription" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>