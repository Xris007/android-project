<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ClassActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"/>
        <TextView
                android:id="@+id/toolBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextTitle"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                android:text="@string/class_title"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toTopOf="@+id/toolBar" android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="@id/ivBack" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.v7.widget.Toolbar>


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/ic_header_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textClassNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/class_number"
            android:fontFamily="@font/avenir_light"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/toolBar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/toolBar" android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"/>
    <TextView
            android:id="@+id/tvInfo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextHint"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="@string/detail"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toBottomOf="@+id/textClassNumber"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"/>
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/tvEnter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="75dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>