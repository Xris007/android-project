<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactUsActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"/>
        <TextView
                android:id="@+id/toolBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextTitle"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                android:text="@string/contant_us_title"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toTopOf="@+id/toolBar" android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="@id/ivBack" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.v7.widget.Toolbar>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/ic_header_image1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_logo"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <TextView
            android:text="@string/phone_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="@font/avenir_book"
            android:id="@+id/textView"
            android:textSize="18sp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:fontFamily="@font/avenir_book"
            android:textColor="@color/colorTextHint"
            android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>"/>
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>


    <TextView
            android:text="@string/email_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="@font/avenir_book"
            android:id="@+id/textView2"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/email"
            android:fontFamily="@font/avenir_book"
            android:textColor="@color/colorTextHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>"/>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/textView1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/address_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="@font/avenir_book"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/address"
            android:fontFamily="@font/avenir_book"
            android:textColor="@color/colorTextHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnWhatsapp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" android:background="@drawable/ic_facebook"
            android:id="@+id/imgBtnFacebook"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" android:background="@drawable/ic_messenger"
            android:id="@+id/imgBtnMessenger"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imgBtnFacebook" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" android:background="@drawable/ic_whatsapp"
            android:id="@+id/imgBtnWhatsapp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imgBtnMessenger" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/btnFeedBack"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="0sp"
            android:text="@string/feedback"
            android:background="#4AAB35"
            android:fontFamily="@font/avenir_book"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>