<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactUs">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"/>
        <TextView
                android:id="@+id/toolBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextTitle"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                android:text="Contact Us"
                android:fontFamily="@font/avenir_light"

                app:layout_constraintTop_toTopOf="@+id/toolBar" android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="@id/ivBack" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.v7.widget.Toolbar>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/ic_bacground2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_logo"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <TextView
            android:text="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/txt1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <TextView
            android:text="978-745-321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt1" android:layout_marginTop="5dp"/>"/>
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/txt2"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/txt3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <TextView
            android:text="MRJ.L@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt3" android:layout_marginTop="5dp"/>"/>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/txt4"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/txt5" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/txt5"
            android:layout_marginTop="18dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Linkedln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/txt6" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp"/>
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/txt6"
            android:layout_marginTop="18dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btnFeddBack"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorTextTitle"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="0sp"
            android:text="@string/feed_back"
            android:background="#4AAB35"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"/>
</android.support.constraint.ConstraintLayout>