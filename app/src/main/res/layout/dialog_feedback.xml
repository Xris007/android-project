<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/colorTextPrimary"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:padding="@dimen/dialog_padding"
            android:gravity="center_horizontal"
            android:text="@string/dialog_feedback_title"
            android:fontFamily="@font/avenir_book"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_underline"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />

    <TextView
            android:id="@+id/tvEnter"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextHint"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0sp"
            android:padding="@dimen/dialog_padding"
            android:gravity="center_horizontal"
            android:text="@string/dialog_feedback_message"
            android:fontFamily="@font/avenir_book"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>